<div class="container min-vh-100 d-flex justify-content-center align-items-center">
  <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
    <div class="card-body">
      <h2 class="text-center mb-4 font-weight-bold">Marketplace Login</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :post, class: "mt-4") do |f| %>

        <!-- Exibição de erros de autenticação -->
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="alert alert-danger">
          <%= flash[:alert] %>
          </div>
        <% end %>


        <div class="form-group">
          <label for="email" class="form-label">E-mail</label>
          <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Digite seu e-mail" %>
        </div>

        <div class="form-group mt-3">
          <label for="password" class="form-label">Senha</label>
          <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Digite sua senha" %>
        </div>

        <div class="form-group form-check mt-3">
          <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
          <label class="form-check-label" for="remember_me">Lembrar de mim</label>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <%= f.submit "Entrar", class: "btn btn-primary w-100" %>
        </div>
        
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "text-decoration-none text-muted" %>
      </div>

      <div class="mt-2 text-center">
        <%= link_to "Criar conta", new_registration_path(resource_name), class: "text-decoration-none text-muted" %>
      </div>
    </div>
  </div>
</div>
