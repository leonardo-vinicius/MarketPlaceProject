<div class="container min-vh-100 d-flex justify-content-center align-items-center">
  <div class="card shadow-lg" style="width: 200%; max-width: 500px;">
    <div class="card-body">
      <h2 class="text-center mb-4 font-weight-bold">Criar Conta</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <!-- Exibição de erros de autenticação -->
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Campo de E-mail -->
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu e-mail" %>
        </div>

        <!-- Campo de Senha -->
        <div class="form-group mt-3">
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
            <em class="text-muted small">(<%= @minimum_password_length %> caracteres no mínimo)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Digite sua senha" %>
        </div>

        <!-- Campo de Confirmação de Senha -->
        <div class="form-group mt-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme sua senha" %>
        </div>

        <!-- Campo de Nome -->
        <div class="form-group mt-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Digite seu nome" %>
        </div>

        <!-- Campo de Telefone -->
        <div class="form-group mt-3">
          <%= f.label :phone, class: "form-label" %>
          <%= f.text_field :phone, class: "form-control", placeholder: "Digite seu telefone" %>
        </div>

        <!-- Campo de CNPJ -->
        <div class="form-group mt-3">
          <%= f.label :cnpj, class: "form-label" %>
          <%= f.text_field :cnpj, class: "form-control", placeholder: "Digite o CNPJ" %>
        </div>

        <!-- Campo de Foto -->
        <div class="form-group mt-3">
          <%= f.label :picture_url, class: "form-label" %>
          <%= f.file_field :picture_url, class: "form-control" %>
        </div>

        <!-- Campo de Nome da Empresa -->
        <div class="form-group mt-3">
          <%= f.label :company_name, class: "form-label" %>
          <%= f.text_field :company_name, class: "form-control", placeholder: "Digite o nome da empresa" %>
        </div>

        <!-- Campo de Endereço -->
        <div class="form-group mt-3">
          <%= f.label :address, class: "form-label" %>
          <%= f.text_field :address, class: "form-control", placeholder: "Digite o endereço" %>
        </div>

        <!-- Botão de Envio -->
        <div class="form-group mt-4">
          <%= f.submit "Criar Conta", class: "btn btn-primary w-100" %>
        </div>

      <% end %>

      <!-- Links de navegação -->
      <div class="mt-3 text-center">
        <%= link_to "Já tem uma conta?", user_session_path, class: "text-decoration-none text-muted" %>
      </div>
    </div>
  </div>
</div>
